author = {Chisadza, Carolyn and Chitiga-Mabugu, Margaret and Mabugu, Ramos Emmanuel and Nicholls, Nicky and Omotoso, Kehinde Oluwaseun and Yitbarek, Eleni},
title = {Possible welfare benefits of basic income support: Evidence from a benefit incidence analysis in South Africa},
journal = {Annals of Public and Cooperative Economics},
